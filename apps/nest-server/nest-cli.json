{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/client-server/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/client-server/tsconfig.app.json"
  },
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "system": {
      "type": "library",
      "root": "libs/system",
      "entryFile": "index",
      "sourceRoot": "libs/system/src",
      "compilerOptions": {
        "tsConfigPath": "libs/system/tsconfig.lib.json"
      }
    },
    "client-server": {
      "type": "application",
      "root": "apps/client-server",
      "entryFile": "main",
      "sourceRoot": "apps/client-server/src",
      "compilerOptions": {
        "tsConfigPath": "apps/client-server/tsconfig.app.json"
      }
    }
  },
  "monorepo": true,
  "root": "apps/client-server"
}
